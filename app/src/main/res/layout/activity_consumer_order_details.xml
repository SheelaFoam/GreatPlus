<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f4"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar_search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/gray_bg"
            android:padding="@dimen/padding_2">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:orientation="vertical">
<com.erp.sheelafoam.utils.CustomTypefaceTextView
    android:id="@+id/tv_consumerDelearName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Anand"
    android:gravity="center"
    android:padding="@dimen/padding_5"
    android:textSize="@dimen/text_18"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.erp.sheelafoam.utils.CustomTypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:padding="@dimen/padding_5"
                                android:text="Mobile Number"
                                android:textColor="@color/colorBlack" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_marginRight="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@drawable/custom_background">

                                <com.erp.sheelafoam.utils.CustomTypefaceEditText
                                    android:id="@+id/etMobileNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@null"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:hint="XXXXXXXXXX"
                                    android:inputType="number"
                                    android:longClickable="false"
                                    android:maxLength="10"
                                    android:padding="@dimen/padding_10"
                                    android:singleLine="true"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorBlack"
                                    android:textSize="@dimen/text_14" />

                                <ImageButton
                                    android:id="@+id/ivSearch"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:src="@android:drawable/ic_menu_search"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="42dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/ivSearch"
                                    android:background="#cccccc" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.erp.sheelafoam.utils.CustomTypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:padding="@dimen/padding_7"
                                android:text="Consumer Name"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_25">

                            <com.erp.sheelafoam.utils.CustomTypefaceEditText
                                android:id="@+id/etConsumerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:background="@drawable/custom_background"
                                android:hint="Enter consumer name"
                                android:padding="@dimen/padding_12"
                                android:singleLine="true"
                                android:inputType="textCapWords"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="@dimen/text_14" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearProductName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_2"
                        android:visibility="visible">

                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:id="@+id/tv_productNameConsumerHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/default_container_layout_padding"
                            android:text="@string/textview_product_list"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/leble_bottom_distributor_size" />


                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:id="@+id/autocomplete_product_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_text_size_small_very_extra_extra"
                            android:background="@drawable/custom_background"
                            android:drawableEnd="@drawable/select_arrow"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:inputType="text|textNoSuggestions"
                            android:padding="@dimen/padding_12"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/leble_bottom_distributor_size" />

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="2dp"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inch"
                                android:textColor="#18b1d7" />

                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp">

                                <TextView
                                    android:id="@+id/tvswitch"
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/switch_selecter"
                                    android:clickable="true" />

                                <TextView
                                    android:id="@+id/tvin"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="2dp"
                                    android:background="@drawable/track_ball_selecter"
                                    android:clickable="true" />

                                <TextView
                                    android:id="@+id/tvmm"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/track_ball_selecter"
                                    android:clickable="true" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="Mm"
                                android:textColor="#18b1d7" />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tvSizes"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/show_button_selector"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="Standard Size"
                            android:textColor="#ffffff" />
                     <!--   <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_customSize"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:layout_weight="1"
