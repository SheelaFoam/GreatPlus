                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_toLeftOf="@+id/v1"
                                android:background="@drawable/transparent_edit_bg"
