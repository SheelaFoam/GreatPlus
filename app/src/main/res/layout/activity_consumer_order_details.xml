                                android:layout_width="1dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:background="#999999" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/mat_height"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_toLeftOf="@+id/v2"
                                android:background="@drawable/transparent_edit_bg"
                                android:gravity="center"
                                android:hint="--"
                                android:inputType="numberDecimal"
                                android:textColor="#000000" />

                            <View
                                android:id="@+id/v2"
                                android:layout_width="1dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:background="#999999" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/tvThikness"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/transparent_edit_bg"
                            android:clickable="true"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:hint="--"
                            android:inputType="number"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_5"
                        android:weightSum="10">

                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="4"
                            android:text="QTY:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16" />


                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:id="@+id/tv_removeItem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginRight="@dimen/margin_10"
                            android:background="@drawable/round_text_remove_item"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="-"
                            android:textColor="#FF0000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:id="@+id/tv_totalQTY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/add_item"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@android:color/background_dark"
                            android:textSize="@dimen/text_14" />

                        <com.erp.sheelafoam.utils.CustomTypefaceTextView
                            android:id="@+id/tv_additem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/round_text_add_item"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="+"
                            android:textColor="@color/consumer_color"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
