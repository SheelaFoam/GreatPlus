<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.erp.sheelafoam.sheelafoam.xperia.activity.PerfectMatch">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background"
            android:elevation="4dp"
            android:theme="@style/Toolbar_Theme"
            android:minHeight="?attr/actionBarSize"
            >
            <LinearLayout
                android:id="@+id/app_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/app_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_text_size"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:src="@drawable/perfect_match_logo"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp" />


    <EditText
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:hint="Search: Enter customer's Mobile no &amp; Name"
        android:background="@drawable/input_full_bg_new"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_margin="4dp"
        android:id="@+id/perfect_match_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>


</LinearLayout>
