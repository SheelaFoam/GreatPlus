<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_15"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_tp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="20dp"
        android:background="@color/divider_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Target"
                android:textColor="@color/drawerBottomTextcolor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tp_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_layout"
            android:layout_marginTop="10dp"
            android:background="@color/layout_border_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Achieved"
                android:textColor="@color/drawerBottomTextcolor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tp_achieved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rcv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inbox_layout"
        android:layout_marginTop="@dimen/margin_20"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/divider_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Target"
                android:textColor="@color/drawerBottomTextcolor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/rcv_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_layout"
            android:layout_marginTop="10dp"
            android:background="@color/layout_border_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Achieved"
                android:textColor="@color/drawerBottomTextcolor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/rcv_achieved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inbox_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>