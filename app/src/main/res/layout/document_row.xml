<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
     <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btn_upload_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/ic_browse" />
                <TextView
                        android:id="@+id/tv_serialno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="#1EAFB4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_document_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/layout_border_color" />

                    <ImageButton
                        android:id="@+id/btn_delete_document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_delete"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

</LinearLayout>
