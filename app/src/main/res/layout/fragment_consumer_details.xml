<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/colorGrey"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="@string/consumer_order"
            android:textColor="@color/consumer_color"
            android:textSize="@dimen/text_20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

            <ImageButton
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:padding="@dimen/padding_4"
                android:src="@android:drawable/ic_menu_search" />

            <EditText
                android:id="@+id/etMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toLeftOf="@id/ivSearch"
                android:background="@drawable/border_gray_edit"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/padding_10"
                android:singleLine="true"
                android:textColorHint="@color/colorGrey" />
        </RelativeLayout>

        <EditText
            android:id="@+id/etConsumerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/border_gray_edit"
            android:hint="Consumer Name"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:padding="@dimen/padding_10"
            android:singleLine="true"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/etConsumerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/border_gray_edit"
            android:hint="Consumer Email"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:padding="@dimen/padding_10"
            android:singleLine="true"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/etConsumerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/border_gray_edit"
            android:gravity="top|left"
            android:hint="Consumer Address"
            android:inputType="textMultiLine|textPostalAddress"
            android:maxLength="200"
            android:minLines="3"
            android:padding="@dimen/padding_10"
            android:textColorHint="@color/colorGrey" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/consumer_theme_color"
            android:text="Next"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>