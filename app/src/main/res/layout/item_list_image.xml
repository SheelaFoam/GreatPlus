<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
   >
    
    <RelativeLayout
        android:id="@+id/rlayout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <RelativeLayout
            android:id="@+id/rlayout_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_container_layout_padding"
          
            
            >
            
            <RelativeLayout
                
                android:id="@+id/rlayout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_button_margine_top"
                
                >
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/icon_height"
                    android:layout_height="@dimen/product_order_measurement_box_width"
                    android:src="@drawable/ic_launcher"
                    android:scaleType="fitXY"
                    />
                
                </RelativeLayout>
            
             <LinearLayout
            android:id="@+id/rlayout_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_container_layout_padding"
            android:layout_toRightOf="@+id/rlayout_image"
            android:orientation="vertical"
            android:visibility="gone"
            >
            
                  <LinearLayout
            android:id="@+id/rlayout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_container_layout_padding"
           
            android:orientation="horizontal"
            >
                  
            <TextView
                android:id="@+id/textview_complaint_no_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Complaint No"
               android:ems="7"
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
                
                android:textColor="@android:color/black"
               
                
                />
            
            <TextView
                android:id="@+id/textview_complaint_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text=": 123456"
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:padding="@dimen/emp_type_lable_margine_left"
                
                />
            
            </LinearLayout>
            
                      <LinearLayout
            android:id="@+id/rlayout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_container_layout_padding"
           
            android:orientation="horizontal"
            >
              <TextView
                android:id="@+id/textview_user_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="User name"
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
                
                 android:textColor="@android:color/black"
                
              
                android:ems="7"
                
                />
              
               <TextView
                android:id="@+id/textview_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text=": 123456789"
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_black"
                android:layout_below="@+id/textview_complaint_no"
                android:paddingLeft="@dimen/emp_type_lable_margine_left"
                
                />
              </LinearLayout>
              
                          <LinearLayout
            android:id="@+id/rlayout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_container_layout_padding"
           
            android:orientation="horizontal"
            >
                <TextView
                android:id="@+id/textview_date_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Date"
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
               
                android:ems="7"
                android:textColor="@android:color/black"
                 
                
                />
                
                 <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text=": 17-03-2016"
               
               android:singleLine="true"
                android:textSize="@dimen/default_running_text_size_small"
              
                 android:textColor="@android:color/black"
                 
                 android:padding="@dimen/emp_type_lable_margine_left"
                />
                </LinearLayout>
            </LinearLayout>
            
            
         
            
            </RelativeLayout>
        
        </RelativeLayout>
    

</RelativeLayout>
