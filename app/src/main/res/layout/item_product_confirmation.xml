<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f1"
    android:paddingLeft="@dimen/padding_5"
    android:paddingRight="@dimen/padding_5"
    android:paddingTop="@dimen/padding_5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                android:layout_width="@dimen/product_view"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/comfortcell" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#aa333333"
                    android:padding="@dimen/padding_5"
                    android:text="Comfort Cell Series 4.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_spinner"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thickness"
                            android:gravity="center"
                            android:padding="@dimen/padding_5"
                            android:background="@color/red_color"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12" />

                        <Spinner
                            android:id="@+id/spnThickness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border_black_spinner"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Length"
                            android:gravity="center"
                            android:padding="@dimen/padding_5"
                            android:background="@color/red_color"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12" />

                        <Spinner
                            android:id="@+id/spnLength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border_black_spinner"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Breadth"
                            android:gravity="center"
                            android:padding="@dimen/padding_5"
                            android:background="@color/red_color"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12" />

                        <Spinner
                            android:id="@+id/spnBreadth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeAdd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:id="@+id/btnAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/teal"
                        android:paddingBottom="@dimen/padding_5"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_5"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/btnAdd"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/padding_5"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingTop="@dimen/padding_5"
                            android:text="-"
                            android:textAllCaps="false"
                            android:background="@drawable/border_gray_edit"
                            android:textColor="@color/red_color"
                            android:textSize="@dimen/text_20" />

                        <TextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/teal"
                            android:text="0"
                            android:padding="@dimen/padding_10"
                            android:textSize="@dimen/text_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/padding_5"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingTop="@dimen/padding_5"
                            android:text="+"
                            android:textAllCaps="false"
                            android:background="@drawable/border_gray_edit"
                            android:textColor="@color/red_color"
                            android:textSize="@dimen/text_20" />

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeAdd">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs"/>
                    <TextView
                        android:id="@+id/tvItemAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_5"
                        android:text="500" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


