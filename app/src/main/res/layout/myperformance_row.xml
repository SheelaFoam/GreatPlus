<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="KPI: "
            android:textColor="@color/drawerBottomTextcolor"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/txt_performance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/drawerBottomTextcolor"
            android:textSize="@dimen/medium_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="W/A: "
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/drawerBottomTextcolor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_weightage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/drawerBottomTextcolor"
            android:textSize="@dimen/medium_text_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/performance_percn_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentage_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/performnce_progress_value"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:max="100" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/performance_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/divider_bg" />

</LinearLayout>