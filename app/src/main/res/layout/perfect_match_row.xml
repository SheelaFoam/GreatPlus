<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/Card"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/strip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6c97cc"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="16-12-2017"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/place_order"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:padding="6dp"
                android:text="Place Order"
                android:textColor="#6c97cc"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/strip_layout"
            android:layout_marginTop="1dp"
            android:background="#afc2da"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alok Singh"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/customer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aloktb3@gmail.com"
                    android:textColor="#000"
                    android:textSize="15sp" />


                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91-7838720865"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="RMXD-XRRR"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>