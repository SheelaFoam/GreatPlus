<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:src="@drawable/prizeicon"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.erp.sheelafoam.utils.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:text="Transaction Date"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <com.erp.sheelafoam.utils.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:text="25-07-2018"
                    android:id="@+id/tv_transaction"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/sleepwell7"
                    android:layout_height="wrap_content" />
                <com.erp.sheelafoam.utils.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:text="Transaction Detail"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <com.erp.sheelafoam.utils.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:text="test test test "
                    android:id="@+id/tv_transactiondetails"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/sleepwell7"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>