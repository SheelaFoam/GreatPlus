<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar"
        layout="@layout/actionbar_new" />

    <com.erp.sheelafoam.utils.CustomTypefaceTextView
        android:id="@+id/tv_showroomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:text="MY GALLERY"
        android:textColor="@color/black"
        android:textSize="@dimen/text_15"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/gray_bg"
        android:padding="@dimen/padding_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">

                    <com.erp.sheelafoam.utils.CustomTypefaceTextView
                        android:id="@+id/tv_selectShowRoomEMPSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/spinner_new"
                        android:clickable="true"
                        android:gravity="center_vertical|left"
                        android:hint="Select Employee *"
                        android:padding="@dimen/padding_10"
                        android:textColor="#000000"
                        android:textColorHint="@color/foot_text_gray"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">

                    <com.erp.sheelafoam.utils.CustomTypefaceTextView
                        android:id="@+id/tv_selectShowroomStoreSpinner"
                        android:layout_width="@dimen/width_qrcode_input"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/spinner_new"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="start"
                        android:hint="Select Store *"
                        android:maxLines="1"
                        android:padding="@dimen/padding_10"
                        android:textColor="#000000"
                        android:textColorHint="@color/foot_text_gray"
                        android:textSize="@dimen/text_12" />

                    <Button
                        android:id="@+id/btn_getShowRoomImg"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:layout_marginLeft="@dimen/default_value_edit_text_margine_from_up"
                        android:layout_marginTop="8dp"
                        android:layout_weight="30"
                        android:background="@color/header_background"
                        android:gravity="center"
                        android:padding="@dimen/padding_7"
                        android:text="GET"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:padding="@dimen/padding_5">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Date"
                        android:visibility="gone" />
<ListView
    android:id="@+id/lv_dateList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>