<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update_profile_crl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/imag_layout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@drawable/circle_shape">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="1.5dp" />

                    <ImageView
                        android:id="@+id/image_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@drawable/image_edit" />
                </FrameLayout>

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/imag_layout"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@drawable/btn_gry_curve"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textColorHint="@color/dark_grey_txt_color" />

                <EditText
                    android:id="@+id/ed_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ed_name"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/btn_gry_curve"
                    android:hint="User Name"
                    android:inputType="text"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textColorHint="@color/dark_grey_txt_color" />


                <EditText
                    android:id="@+id/ed_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ed_user_name"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/btn_gry_curve"
                    android:hint="Email ID"
                    android:inputType="text"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textColorHint="@color/dark_grey_txt_color" />

                <EditText
                    android:id="@+id/ed_role_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ed_email_id"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/btn_gry_curve"
                    android:hint="Role Name"
                    android:inputType="text"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textColorHint="@color/dark_grey_txt_color" />

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ed_role_name"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/btn_gry_curve"
                    android:hint="Mobile"
                    android:inputType="text"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textColorHint="@color/dark_grey_txt_color" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ed_mobile"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_blue_curve"
                    android:gravity="center"
                    android:shadowRadius="0"
                    android:minHeight="@dimen/button_height"
                    android:stateListAnimator="@null"
                    android:text="Submit"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_submit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center_horizontal"
                    android:text="change password"
                    android:textAllCaps="true"
                    android:textColor="@color/btn_background"
                    android:textSize="@dimen/medium_text_size" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>